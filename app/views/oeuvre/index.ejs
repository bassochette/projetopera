<h2 class="muted">Inventaire</h2>


<%- link_to('Nouvelle oeuvre', '/oeuvre/new', {class : 'btn btnAdd'}) %>

<table class="table table-striped">
    <thead>
        <tr>
            
            <td></td>
            <td>Numéro d'inventaire</td>

            <td>Désignation</td>
            
            <td>Auteur(s)</td>
            
            <td>Matériaux</td>
            
            <td>Technique(s)</td>
            
            <td>Datation</td>
        </tr>
    </thead>
    <tbody>

        <% oeuvres.forEach(function(oeuvre){ %>
            <tr class="darkenOnHover" onclick="location.href='/oeuvre/show/<%=oeuvre.id%>'">
               
                <td>
                    <%if(oeuvre.verrou){%>
                        <!--
                        <img src="/images/glyphicons/glyphicons_203_lock.png" alt="verrouillé">
                    -->
                        <div class="glyphicon glyphicon-lock"></div>
                    <%}%>
                </td>

                <td><%- oeuvre.oeuvreId %></td>

                <td><%- oeuvre.designation %></td>
                
                <td><%- oeuvre.auteur %></td>
                
                <td><%- oeuvre.materiaux %></td>
                
                <td><%- oeuvre.techniques %></td>
                
                <td><%- oeuvre.datation %></td>
                
                
            </tr>
        <% }); %>
    </tbody>
</table>

