
<row id="loginContainer">
<div class="loginContainer col-sm-4 col-sm-offset-3"> 

    <h1 id="loginTitle" class="col-sm-10">
        <span>Museion</span>
    </h1>

    <form role="form" class="flatForm form-horizontal" method="post" action="/account/login">
        <fieldset>
        <div class="form-group"> 
            <input id="username" name="username" placeholder="Nom d'utilisateur" class="col-sm-10 col-sm-offset-1" required=""></input>
        </div>  
        <div class="form-group">
            <input type="password" id="password" name="password" placeholder="Mot de passe" class="col-sm-10 col-sm-offset-1" required=""></input>
        </div>
        <div class="form-group"> 
            <button type="submit" class="btn btn-info col-sm-10 col-sm-offset-1" value="Log in"> Connexion</button>
        </div>
        </fieldset>
    </form>

</div>
</row>

