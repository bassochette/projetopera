



<div id="inventaire" oeuvre="<%-oeuvre.id%>">

	<!-- Navbar -->
	<ul class="nav nav-tabs" role="tablist" id="myTabBar">
		<li id="inventaireTab" class="active" >
			<a href="#inventaireTabContent" role="tab" data-toggle="tab" id="inventaireTabLink">Inventaire</a>
		</li>
		<% if(oeuvre.id){ %>
		<li id="dossierTab" >
			<a href="#dossierOeuvreTabContent" role="tab" data-toggle="tab" id='dossierOeuvreTabLink'>Dossier</a>
		</li>

		<!--
		<li id="fichierTab">
			<a href="#" role="tab" data-toggle="tab">Fichiers</a>
		</li>
		-->
		<%}%>
	</ul>


	

	<div class="tab-content">

		<!-- Tab content onglet 1 -->
		<div class="tab-pane fade in active" id="inventaireTabContent">
			
			<!-- carousel + upload form -->
			<% if(oeuvre.id) { %>
				<div class="col-sm-7" id="carouselContainer" >
					<div id="carousel" class="carousel slide" data-ride="carousel">
						
						<ol class="carousel-indicators">
						</ol>

						<div class="carousel-inner">
						</div>

						 <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
						    <span class="glyphicon glyphicon-chevron-left"></span>
						  </a>
						  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
						    <span class="glyphicon glyphicon-chevron-right"></span>
						  </a>

						
					</div>
				</div>
				<div class="col-sm-4 manageImages">
					
					<div id="uploadImage">
						<form id="imagesUploadForm" method="POST"  enctype="multipart/form-data" action="/images/upload" >
							<input type="file" name="imagesUpload" accept='image/*'></input>
							<input type="hidden" value='<%-oeuvre.id%>' name='oeuvreId' id='oeuvreId'></input>
							<input type="submit" value="Ajouter une image" class="btn"></button>
						</form>
					</div>

				<!-- 	<div id="deleteImage" >
						<form class="deleteImage">
							<select class="deleteImage">
								<option disabled>Supprimer une image</option>
							</select>
						</form>
					<div> -->
					<div class="deleteImage">
						<table id="imagesList">
							<tr>
								<td>Images</td>
								<td></td>
							</tr>
							<%
								for(var i=0; i<images.length; i++){
									%>
										<tr class="imageLine">
											<td class="imageName"><%=images[i].nom%></td>
											<td>
												<button type="button" class="btn btn-xs btn-danger" onClick='location.href="/images/delete/<%-images[i].oeuvreId%>/<%-images[i].id%>"'>
													<span class="glyphicon glyphicon-remove"></span>
												</button>	
											</td>
										</tr>
									<%
								}
							%>
						</table>
					</div>
					
				</div>
				
			
			<% }%>

			<!-- body inventaire -->
			<br>
			
			
			<% if(oeuvre.verrou){ %>
				<%- partial("./show_locked") %>
			<% } else { %>
				<%- partial("./show_notlocked") %>
			<% } %>
			

		</div>

		<!-- tab content onglet 2 --> 
		<div class="tab-pane fade" id="dossierOeuvreTabContent">
			<!-- dossier oeuvres -->
			
			<%- partial("./show_dossierOeuvre") %>
			
		</div>
	</div>
	
</div>








