<form action="/account/register" method="post" role="form">
    <fieldset>
        <div class="col-md-offset-4 col-md-4 col-sm-8 col-sm-offset-2">
            <legend>Formulaire d'inscription</legend>
            <div class="form-group">
                <label for="username">Nom utilisateur:</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="email">Addresse courrielle :</label>
                <input type="email" class="form-control" id="email" name="email" required/>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirmation du mot de passe :</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required/>
            </div>

            <div class="btn-group col-md-offset-8 col-sm-offset-9">
                <input type="submit" value="Register" class="btn btn-success"/>
            </div>
        </div>
    </fieldset>
</form>